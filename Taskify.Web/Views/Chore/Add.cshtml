@{
    ViewBag.Title = "Chores";
}

<h2>Add Chore</h2>

<div id="choreAddDiv">
    <form>
        <div class="form-group">
            <label >Name</label>
            <input type="text" class="form-control" placeholder="Name" data-bind="value: name">
        </div>
        <div class="form-group">
            <label >Requirements</label>
            <input type="text" class="form-control" placeholder="Requirements" data-bind="value: requirement">
        </div>

        <div class="form-group">
            <label >Deadline</label>
            <input type="text" class="form-control" placeholder="DeadLine" data-bind="value: deadline">
        </div>

        <div class="form-group">
            <label >Status</label>
            <select class="form-control">
                <option>Future</option>
                <option>In Progress</option>
                <option>Done</option>
            </select>
        </div>

        <button data-bind="click: submit" class="btn btn-default">Submit</button>
    </form>

</div>

@section scripts
{
    <script>
        var choreAddViewModel = function() {
            var self = this;
            self.name = ko.observable("");
            self.requirement = ko.observable("");
            self.deadline = ko.observable("05/05/2016");
            self.status = ko.observable("Done");

            self.submit = function() {
                sendViewModelToController("Chore/Create", ko.toJSON(self), function() {
                    alert("DONE");
                });
            }

        }

        ko.applyBindings(new choreAddViewModel(), document.getElementById('choreAddDiv'));
    </script>
}